#
# wm independent hotkeys
#

# open browser
super + b
	firefox

# open terminal
super + Return
	alacritty

# program launcher
super + d
	rofi -show drun

super + w 
	rofi -show window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# close and kill
super + c
	bspc node -c

super + shift + c
	bspc node -k

# toggle fullscreen, tiled, pseudo tiled, floating
super + f
	bspc node --state \~fullscreen

super + t
	bspc node --state \~tiled

super + p
	bspc node --state \~pseudo_tiled

super + g
	bspc node --state \~floating

# swap the current node and the biggest window
super + s
	bspc node -s biggest.window

#
# focus/swap
#

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# focus or send to the given desktop
super + {1-9}
	bspc desktop -f focused:'^{1-9}'

super + shift + {1-9}
	bspc node -d focused:'^{1-9}'

# focus desktop/monitor
super + ctrl + {h,l}
	bspc monitor -f {west,east}

super + ctrl + shift + {h,l}
	bspc node -m {west,east} --follow

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# volume control
#

# volume up
XF86AudioRaiseVolume
	pamixer -i 3

super + period
	pamixer -i 3

# volume down
XF86AudioLowerVolume
	pamixer -d 3

super + comma 
	pamixer -d 3

# volume mute
XF86AudioMute
	pamixer -t

# play
XF86AudioPlay
	playerctl play-pause

# next
XF86AudioNext
	playerctl next

# previous
XF86AudioPrev
	playerctl previous

# stop
XF86AudioStop
	playerctl stop

# brightness up
XF86MonBrightnessUp
	xbacklight -inc 10

# brightness down
XF86MonBrightnessDown
	xbacklight -dec 10

# NOTE `pip install --user xinput` && `sudo pacman -S xorg-xinput`
# disable touchpad
super + t
	disable-touchpad

# enable touchpad
super + shift + t
	enable-touchpad
